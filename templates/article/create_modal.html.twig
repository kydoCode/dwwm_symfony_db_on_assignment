{% extends 'base.html.twig' %}

{% block title %}Créer un article{% endblock %}

{% block body %}
<div class="row justify-content-center">
  <div class="col-md-8">
    <div class="card">
      <div class="card-body">
        <h3 class="mb-4">Créer un article</h3>
        <form method="post" action="{{ path('article_new') }}">
          <div class="mb-3">
            <label for="pageCreateTitle" class="form-label">Titre</label>
            <input type="text" class="form-control" id="pageCreateTitle" name="title" required>
          </div>
          <div class="mb-3">
            <label for="pageCreateAuthor" class="form-label">Auteur</label>
            <input type="text" class="form-control" id="pageCreateAuthor" name="author" required>
          </div>
          <div class="mb-3">
            <label for="pageCreateContent" class="form-label">Contenu</label>
            <textarea class="form-control" id="pageCreateContent" name="content" rows="5" required></textarea>
          </div>
          <div class="d-flex justify-content-end gap-2">
            <a href="{{ path('article_index') }}" class="btn btn-secondary">Annuler</a>
            <button type="submit" class="btn btn-primary">Créer</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
{% endblock %}
