<div class="article-detail">
  <h3 class="mb-3">{{ article.title }}</h3>
  
  <div class="mb-3">
    {% if article.auteur %}
    <p class="text-muted mb-1"><strong>Auteur :</strong> {{ article.auteur.nom }}</p>
    {% endif %}
    <p class="text-muted"><strong>Publi√© le :</strong> {{ article.publishedAt|date('d/m/Y') }}</p>
  </div>
  
  <div class="mb-4">
    <p style="white-space: pre-wrap;">{{ article.content }}</p>
  </div>
  
  <div class="d-flex justify-content-end gap-2">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#editModal" data-id="{{ article.id }}" data-bs-dismiss="modal">
      Modifier
    </button>
  </div>
</div>